using namespace std;

void main_menu();

void search_menu(){

	int choice; 

	cout << "\n[Search Menu]\n\n";
	cout << "Search by:\n";
	cout << "1. Author\n";
	cout << "2. Title\n";
	cout << "3. Tag(s)\n";
	cout << "4. Date\n"; 
	cout << "5. Return to Main Menu\n\n";
	cout << "* Enter command: ";
	
	cin >> choice;

	if(choice == 1){

		cout << "Enter Author: "; 
	}
	else if(choice == 2){

		cout << "Enter Title: ";
	}
	else if(choice == 3){

		cout << "Enter Tag(s): ";
	}
	else if(choice == 4){

		cout << "Enter Date: ";
	}
	else if(choice == 5){

		main_menu();
	}
}

void main_menu(){

 	int choice; 
	
	cout << "[Main Menu]\n\n";
	cout << "1. Make a new post\n";
	cout << "2. Search a post\n";
	cout << "3. Exit\n\n";
	cout << "* Enter command: ";

	cin >> choice; 

	if(choice == 1){
		//add what to ask when making a new post
	}
	else if(choice == 2){
		search_menu();
	}
	else if(choice == 3){
		exit(0);
	}
}

